<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="100dp"
    android:padding="10dp">

    <!-- Imagen del auto -->
    <ImageView
        android:id="@+id/ivAuto"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_default_car"
        android:contentDescription="@string/imagen_del_auto" />

    <!-- InformaciÃ³n del auto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNombreAuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nombre_del_auto"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMarcaAuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/marca_del_auto"
            android:textSize="14sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/tvAnio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/a_o"
            android:textSize="14sp"
            android:textColor="#666666" />

    </LinearLayout>
</LinearLayout>
